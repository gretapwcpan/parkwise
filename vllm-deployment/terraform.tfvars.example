# AWS Configuration
aws_region = "us-east-1"

# EC2 Configuration
key_pair_name = "your-aws-key-pair-name"  # REQUIRED: Your AWS key pair for SSH access
instance_type = "p4d.24xlarge"            # 8x A100 40GB GPUs

# Model Configuration
model_name           = "openai/gpt-oss-20b"
hf_token            = ""                   # Optional: HuggingFace token if model is private
tensor_parallel_size = 8                   # Use all 8 GPUs
max_model_len       = 4096

# API Configuration
port    = 8000
api_key = ""  # Optional: Set to require API key for access

# Security
allowed_ips = ["0.0.0.0/0"]  # IMPORTANT: Restrict this to your IP for production

# Cost Optimization
enable_auto_shutdown = true
auto_shutdown_hours  = 2  # Shutdown after 2 hours of inactivity
